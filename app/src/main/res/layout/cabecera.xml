<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cabecera"
    android:orientation="vertical"
    android:background="@color/amarilloGobierno"
    android:paddingTop="60dp"
    android:paddingBottom="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp">

    <!-- ðŸŸ¨ FILA DE TEXTO Y ESCUDO -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <TextView
                android:id="@+id/textoSaludo"
                android:text="Hola ANA"
                android:textColor="@color/azulGobierno"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/textoFecha"
                android:text="Hoy es viernes, 24 de octubre de 2025"
                android:textColor="@color/textoOscuro"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textoCerrarSesion"
                android:text="Cerrar sesiÃ³n"
                android:textColor="@color/azulGobierno"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <ImageView
            android:id="@+id/escudo"
            android:src="@drawable/escudo_espania"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="Escudo de EspaÃ±a" />
    </LinearLayout>

    <!-- ðŸ”´ BOTONES MODO DESARROLLADOR -->
    <LinearLayout
        android:id="@+id/contenedorBotonesDev"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/botonAvanzar"
            android:text="AVANZAR DÃA >"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/rojoBandera"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingVertical="10dp"
            android:elevation="3dp" />

        <Button
            android:id="@+id/botonReiniciar"
            android:text="REINICIAR DÃAS >"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/rojoBandera"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingVertical="10dp"
            android:elevation="3dp" />
    </LinearLayout>

</LinearLayout>
