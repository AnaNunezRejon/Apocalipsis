<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulGobierno"
    tools:context=".vista.VistaServicios">

    <!-- ðŸŸ¨ CABECERA -->
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/amarilloGobierno"
        android:paddingTop="70dp"
        android:paddingBottom="35dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textoSaludo"
                android:text="Hola, ANTONIA PÃ‰REZ"
                android:textColor="@color/azulGobierno"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textoFecha"
                android:text="Hoy es jueves 23 de octubre de 2025"
                android:textColor="@color/azulGobierno"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:src="@drawable/escudo_espania"
            android:contentDescription="Escudo de EspaÃ±a"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <!-- ðŸŸ¦ CONTENIDO -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Servicios"
                android:textColor="@color/blanco"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- ðŸ“ž LISTA DE SERVICIOS -->

            <include layout="@layout/item_servicio" android:id="@+id/itemPoliciaMunicipal" />
            <include layout="@layout/item_servicio" android:id="@+id/itemGuardiaCivil" />
            <include layout="@layout/item_servicio" android:id="@+id/itemPoliciaNacional" />
            <include layout="@layout/item_servicio" android:id="@+id/itemEjercito" />
            <include layout="@layout/item_servicio" android:id="@+id/itemRegistro" />

        </LinearLayout>
    </ScrollView>

    <!-- âš« MENÃš INFERIOR -->
    <LinearLayout
        android:id="@+id/menuInferior"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/azulGobierno"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/botonInicio"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_inicio"
                android:tint="@color/blanco"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:text="Inicio"
                android:textColor="@color/blanco"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/botonServicios"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_servicios"
                android:tint="@color/blanco"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:text="Servicios"
                android:textColor="@color/blanco"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/botonHistorial"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_historial"
                android:tint="@color/blanco"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:text="Historial"
                android:textColor="@color/blanco"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/botonGuia"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_guia"
                android:tint="@color/blanco"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:text="GuÃ­a"
                android:textColor="@color/blanco"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
