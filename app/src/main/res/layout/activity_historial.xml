<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulGobierno"
    tools:context=".vista.PrincipalActivity">

    <!-- ðŸŸ¨ CABECERA FIJA -->
    <LinearLayout
        android:id="@+id/cabecera"
        android:orientation="horizontal"
        android:background="@color/amarilloGobierno"
        android:paddingTop="50dp"
        android:paddingBottom="25dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Texto del saludo -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textoSaludo"
                android:text="Hola, ANTONIA PÃ‰REZ"
                android:textColor="@color/azulGobierno"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textoFecha"
                android:text="Hoy es jueves 23 de octubre de 2025"
                android:textColor="@color/azulGobierno"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Escudo -->
        <ImageView
            android:id="@+id/escudoGobierno"
            android:src="@drawable/escudo_espania"
            android:contentDescription="Escudo de EspaÃ±a"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <!-- ðŸŸ¦ CONTENIDO PRINCIPAL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:background="@color/azulGobierno">

        <LinearLayout
            android:id="@+id/contenedorContenido"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- AquÃ­ va el contenido de cada vista -->
            <TextView
                android:text="(Contenido principal de esta vista)"
                android:textColor="@color/blanco"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- âš« MENÃš INFERIOR -->
    <LinearLayout
        android:id="@+id/menuInferior"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/azulGobierno"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/botonInicio"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_inicio"
                android:tint="@color/blanco"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:text="Inicio"
                android:textColor="@color/blanco"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/botonServicios"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_servicios"
                android:tint="@color/blanco"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:text="Servicios"
                android:textColor="@color/blanco"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/botonHistorial"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_historial"
                android:tint="@color/blanco"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:text="Historial"
                android:textColor="@color/blanco"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/botonGuia"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_guia"
                android:tint="@color/blanco"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:text="GuÃ­a"
                android:textColor="@color/blanco"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
